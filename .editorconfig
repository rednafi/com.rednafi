# https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = false
charset = utf-8
end_of_line = lf
max_line_length = 92

[*.{css,html,js,json,jsonc,yml,yaml}]
indent_style = space
indent_size = 2

[*{.py,.md,Makefile,.sh}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
